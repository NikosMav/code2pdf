{
  "github": {
    "cache_duration_hours": 2,
    "max_repos": 20,
    "include_forks": false,
    "include_private": false
  },
  "cv": {
    "include_contact_info": true,
    "include_stats_table": true,
    "include_insights": true,
    "max_featured_repos": 12,
    "activity_threshold_days": 90
  },
  "output": {
    "filename_template": "{username}_comprehensive_cv",
    "include_timestamp": true
  },
  "scraping": {
    "enable_website_enrichment": true,
    "max_websites_per_profile": 5,
    "website_cache_duration_hours": 48,
    "firecrawl_timeout_seconds": 30,
    "extract_technologies": true,
    "extract_skills": true,
    "extract_experience": true
  }
} 